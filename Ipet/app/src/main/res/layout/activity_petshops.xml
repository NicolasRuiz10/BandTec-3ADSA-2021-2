<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Petshops">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:background="#EDEDED"
            app:shapeAppearanceOverlay="@style/input_border_radius"
        >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@mipmap/search_icon"
            />
            <EditText
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Loja"
                android:textColorHint="#A1A1A1"
                android:textColor="@color/black"
                android:layout_marginBottom="7dp"
                android:textSize="20sp"
                android:id="@+id/et_email"
            />
            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:shapeAppearanceOverlay="@style/imageCircle"
                android:layout_gravity="center"
                android:src="@mipmap/close_icon"
            />

        </LinearLayout>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ll_petshop"
                    android:orientation="vertical"
                >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@mipmap/close_icon"
                            android:id="@+id/im_petshop"
                        />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Outback"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                            />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20-60 min"
                                android:textSize="12sp"
                                android:layout_marginLeft="10dp"
                                android:textColor="#959595"
                            />
                        </LinearLayout>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Entrega grÃ¡tis"
                            android:textSize="12sp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:textColor="#1C7C20"
                        />

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>