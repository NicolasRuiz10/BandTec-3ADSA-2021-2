<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_item_petshop">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_petshop"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:background="@color/white"
        app:cardBackgroundColor="@android:color/white"
        >
        <LinearLayout
            android:id="@+id/ll_card_view_petshop"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="100dp"
                card_view:cardElevation="5dp"
                android:layout_margin="10dp">

                <ImageView
                    android:id="@+id/imagem_petshop"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/petlove"
                    />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/ll_info_petshop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/petshop_pedido"
                app:layout_constraintEnd_toStartOf="@+id/btn_pedidos_detalhes"
                >

                <TextView
                    android:id="@+id/nome_petshop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24dp"
                    android:text="Petlove"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="5dp"
                    android:textStyle="bold"
                    android:maxLength="10"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/petshop_pedido"
                    />

                <TextView
                    android:id="@+id/idPet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:maxLength="16"
                    android:textSize="16dp"
                    android:textColor="@android:color/holo_green_light"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintTop_toBottomOf="@+id/nome_petshop"
                    app:layout_constraintStart_toEndOf="@+id/petshop_pedido"
                    />
                <TextView
                    android:id="@+id/numero_petshop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11 9999-8888"
                    android:textSize="16dp"
                    android:maxLength="18"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/km_petshop"
                    app:layout_constraintStart_toEndOf="@+id/petshop_pedido"
                    />
                <TextView
                    android:id="@+id/email_petshop"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Aberto"
                    android:textSize="16dp"
                    android:maxLength="16"
                    android:layout_marginBottom="5dp"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintTop_toBottomOf="@+id/numero_petshop"
                    app:layout_constraintStart_toEndOf="@+id/petshop_pedido"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>