<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical"
    android:layout_marginHorizontal="2dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp"
    android:gravity="center">

    <com.google.android.material.imageview.ShapeableImageView
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/img_shop"
        android:scaleType="centerCrop"
        android:padding="4dp"
        app:shapeAppearanceOverlay="@style/rounded_shop"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:strokeWidth="3dp"
        app:strokeColor="@color/it_gray"
        />

    <TextView
        android:id="@+id/tv_nome"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/img_shop"
        app:layout_constraintTop_toTopOf="parent"
        tools:text = "Teste de produto"
        android:layout_marginTop="8dp"
        android:textSize="16sp"
        android:layout_marginStart="10dp"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/txt_subtitle"
        app:layout_constraintStart_toStartOf="@id/tv_nome"
        app:layout_constraintTop_toBottomOf="@id/tv_nome"
        tools:text = "A partir de:"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_valor"
        app:layout_constraintStart_toStartOf="@id/tv_nome"
        app:layout_constraintTop_toBottomOf="@id/tv_nome"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text = "R$22,00"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>
